{
  "name": "weight-loss-tracker",
  "version": "1.0.0",
  "description": "A simple weight loss tracker built with React and Firebase.",
  "main": "src/index.js",
  "scripts": {
    "start": "serve .",
    "build": "esbuild src/index.js --bundle --minify --outfile=bundle.js --loader:.js=jsx --jsx=automatic --define:process.env.NODE_ENV='\"production\"' --define:process.env.REACT_APP_FIREBASE_API_KEY='\"' + process.env.REACT_APP_FIREBASE_API_KEY + '\"'"
  },
  "dependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "firebase": "^10.12.2"
  },
  "devDependencies": {
    "esbuild": "^0.23.0"
  }
}